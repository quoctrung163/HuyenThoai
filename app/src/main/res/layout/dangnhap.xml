<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:id="@+id/ndangkiCha"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_marginLeft="10dp"
        android:text="Nhập mail:"
        android:id="@+id/ntvTen"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        />

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/ntvMatKhau"
        android:layout_below="@+id/ntvTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"

        android:text="Mật Khẩu:" />

    <EditText
        android:id="@+id/nedEmail"
        android:layout_toRightOf="@+id/ntvTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="43dp"
        android:ems="10"
        android:hint="Nhập Emal"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_marginTop="20dp"
        android:layout_below="@+id/nedEmail"
        android:layout_toRightOf="@+id/ntvMatKhau"
        android:id="@+id/nedPassWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:ems="10"
        android:hint="Tạo Mật Khẩu"
        android:inputType="textPassword" />

    <LinearLayout
        android:id="@+id/layoutdangnhap"
        android:layout_width="250dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:layout_below="@id/nedPassWord"
        android:orientation="horizontal">

        <Button
            android:id="@+id/nbtnDangNhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="Đăng Nhập" />

        <Button
            android:id="@+id/nbtnQuenMatKhau"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Quên Mật Khẩu" />
    </LinearLayout>
    <ProgressBar
        android:layout_below="@+id/layoutdangnhap"
        android:id="@+id/nProgressBar"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_marginTop="70dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"

        android:indeterminate="true"/>

</RelativeLayout>